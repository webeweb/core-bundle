{#
# Displays a jQuery InputMask "date".
#
# @param string $id The id attribute.
# @param bool $scriptTag Script tag ?
# @return string Returns the jQuery InputMask "date".
#}
{% macro jQueryInputMaskDate(id, scriptTag, scriptTag) %}
    {% set _selector = id %}
    {% set _scriptTag = scriptTag is not null ? scriptTag : true %}
    {{ jQueryInputMask({"selector": _selector, "mask": "99/99/9999", "opts": {"placeholder": "__/__/____"}, "scriptTag": _scriptTag}) }}
{% endmacro %}

