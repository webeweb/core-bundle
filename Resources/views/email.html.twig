{# Resources/views/email.html.twig #}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        {% include "@Core/include/email/stylesheet.html.twig" %}
        {% block coreEmailStylesheets %}
        {% endblock %}
    </head>
    <body>
        <center class="wrapper">
            {% block coreEmailHeader %}
                <table class="top-panel center" width="602" border="0" cellspacing="0" cellpadding="0">
                    <tbody>
                        <tr>
                            <td class="title" width="300">{{ emailLayout.companyName|default("WEBEWEB") }}</td>
                            <td class="subject" width="300">
                                <a class="strong" href="{{ emailLayout.companyURL|default("https://github.com/webeweb/") }}" target="_blank">
                                    {{ emailLayout.companyURL|default("https://github.com/webeweb/") }}
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td class="border" colspan="2">&nbsp;</td>
                        </tr>
                    </tbody>
                </table>
            {% endblock %}
            <div class="spacer">&nbsp;</div>
            {% block coreEmailBody %}
                <table class="main center" width="602" border="0" cellspacing="0" cellpadding="0">
                    <tbody>
                        <tr>
                            <td class="column">
                                <div class="column-top">&nbsp;</div>
                                {% block coreEmailContent %}
                                    <table class="content" border="0" cellspacing="0" cellpadding="0">
                                        <tbody>
                                            <tr>
                                                <td class="padded">
                                                    <h1>Responsive Email Template</h1>
                                                    <p>With a little of <strong>Material Design</strong> by Google.</p>
                                                    <p>It does not contain all styles of html-elements that you can use. So if you had trouble with something - add comment to this pen.</p>
                                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.</p>
                                                    <p>In addition to paragraph and h1-heading you also can create buttons, links and caption text:</p>
                                                    <p style="text-align:center;"><a href="#" class="btn">EXAMPLE BUTTON</a></p>
                                                    <p style="text-align:center;">
                                                        <a href="#" class="strong">Example link</a>
                                                    </p>
                                                    <p class="caption">This is a caption text in main email body.</p>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                {% endblock %}
                                <div class="column-bottom">&nbsp;</div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            {% endblock %}
            <div class="spacer">&nbsp;</div>
            {% block coreEmailFooter %}
                <table class="footer center" width="602" border="0" cellspacing="0" cellpadding="0">
                    <tbody>
                        <tr>
                            <td class="border" colspan="2">&nbsp;</td>
                        </tr>
                        <tr>
                            <td class="signature" width="300">
                                <p>
                                    {{ emailLayout.bestRegards|default("label.with_best_regards"|trans({}, "CoreBundle")) }},<br/>
                                    {{ emailLayout.companyName|default("WEBEWEB") }}<br/>
                                    {{ emailLayout.supportPhone|default("+33 6 xx xx xx xx") }}, {{ emailLayout.supportName|default("label.support"|trans({}, "CoreBundle")) }}<br/>
                                </p>
                                <p>
                                    {{ "label.support"|trans({}, "CoreBundle") }}: <a class="strong" href="{{ emailLayout.supportEmail|default("https://github.com/webeweb/") }}" target="_blank">
                                        {{ emailLayout.supportName|default("https://github.com/webeweb/") }}
                                    </a>
                                </p>
                            </td>
                            <td class="subscription" width="300">
                                <div class="logo-image">
                                    <a href="{{ emailLayout.companyURL|default("https://github.com/webeweb/") }}" target="_blank">
                                        <img src="{{ emailLayout.companyLogo|default("https://github.com/webeweb/bootstrap-bundle/blob/master/Resources/public/favicons/favicon-96x96.png?raw=true") }}" alt="logo-alt" height="70">
                                    </a>
                                </div>
                                <p>
                                    <a class="strong block" href="{{ emailLayout.unsubscribeURL|default("#") }}" target="_blank">
                                        {{ "label.unsubscribe"|trans({}, "CoreBundle") }}
                                    </a>
                                    <span class="hide">&nbsp;&nbsp;|&nbsp;&nbsp;</span>
                                    <a class="strong block" href="{{ emailLayout.accountSettingsURL|default("#") }}" target="_blank">
                                        {{ "label.account_settings"|trans({}, "CoreBundle") }}
                                    </a>
                                </p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            {% endblock %}
        </center>
    </body>
</html>
